<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1" name="viewport">
    <meta content="" name="theme-color">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: '32', height: '32' }}">
    {%- endif -%}

    <title>
      {{ page_title }}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    {{ content_for_header }}

    <style>
      {% if settings.heading_font != settings.body_font %}
        @import url('https://fonts.googleapis.com/css2?family={{ settings.heading_font | capitalize | replace: ' ', '+' }}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');
        @import url('https://fonts.googleapis.com/css2?family={{ settings.body_font | capitalize | replace: ' ', '+' }}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');
      {% else %}
        @import url('https://fonts.googleapis.com/css2?family={{ settings.heading_font | capitalize | replace: ' ', '+' }}:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');
      {% endif %}
    </style>
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}" >
  </head>

  <body id="{{ page_title | handle }}" class="template-{{ template.name | handle }}">
    <div id="page">
      {% section 'header' %}
      <main id="MainContent">
        {{ content_for_layout }}
      </main>
      {% section 'footer' %}
    </div>
    <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
  </body>
</html>
