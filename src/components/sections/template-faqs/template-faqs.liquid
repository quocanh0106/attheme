{% schema %}
  {
    "name": "Template FAQs",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Column per row"
      }, 
      {
        "type": "range",
        "id": "col_dt",
        "label": "Column per row desktop",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "col_tl",
        "label": "Column per row tablet",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "col_mb",
        "label": "Column per row mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      },
      {
        "type": "header",
        "content": "Common settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Top DeskTop",
        "default": 64
