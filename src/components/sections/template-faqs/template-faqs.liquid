{%- style -%}
  [data-section-id="{{ section.id }}"] {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media screen and (min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width" data-section-id="{{ section.id }}">
  <span class="!hidden grid md:grid-cols-1 md:grid-cols-2 md:grid-cols-3 md:grid-cols-4 md:grid-cols-5 lg:grid-cols-1 lg:grid-cols-2 lg:grid-cols-3 lg:grid-cols-4 lg:grid-cols-5"></span>
  <ul class="grid gap-4 lg:gap-6 grid-cols-{{ section.settings.col_mb }} md:grid-cols-{{ section.settings.col_tl }} lg:grid-cols-{{ section.settings.col_dt }}">
    {% for block in section.blocks %}
      <li class="rounded-circle p-4 lg:p-10 border border-primary-opacity-30">
        <{{ block.settings.block_heading_tag }} class="text-xl lg:text-2xl !leading-none mb-3 lg:mb-4 text-center text-primary">{{ block.settings.heading }}</{{ block.settings.block_heading_tag }}>
        <ul class="grid gap-2.5">
          {% for item in block.settings.listfaqs.links %}
            <li>
              <a href="{{ item.url }}" class="text-secondary hover:text-primary"><{{ block.settings.block_heading_faqs }} class="text-inherit text-sm lg:text-base !leading-none">{{ item.title }}</{{ block.settings.block_heading_faqs }}></a>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% endfor %}
  </ul>

</div>
