                "label": "Heading 3"
              },
              {
                "value": "h4",
                "label": "Heading 4"
              },
              {
                "value": "h5",
                "label": "Heading 5"
              }
            ]
          },
          {
            "type": "link_list",
            "id": "listfaqs",
            "label": "list FAQs"

          },
          {
            "type": "select",
            "id": "block_heading_faqs",
            "label": "Block heading faqs",
            "default": "h4",
            "options": [
              {
                "value": "h1",
                "label": "Heading 1"
              },
              {
                "value": "h2",
                "label": "Heading 2"
              },
              {
                "value": "h3",
                "label": "Heading 3"
              },
              {
                "value": "h4",
                "label": "Heading 4"
              },
              {
                "value": "h5",
                "label": "Heading 5"
              }
            ]
          }
        ]
      }
    ]
  }
{% endschema %}