{%- style -%}
  #shopify-section-{{ section.id }} {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  #shopify-section-{{ section.id }} {{ section.settings.heading_tag }} {
    color: {{ section.settings.color_heading }};
  }
  #shopify-section-{{ section.id }} p, #shopify-section-{{ section.id }} a {
    color: {{ section.settings.color_description }};
  }
  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="text-center page-width" data-section-id="{{ section.id }}">
  <div class="text-center">
    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_tag }} class="text-center text-xl lg:text-2xl !leading-none font-bold mb-2 lg:mb-2.5">{{ section.settings.heading }}</{{ section.settings.heading_tag }}>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="text-base font-normal mb-6 lg:mb-8">{{ section.settings.description }}</p>
    {% endif %}
  </div>
  <ul class="flex flex-wrap gap-4 items-center justify-center mt-8" role="list">
    {%- if settings.social_facebook_link != blank -%}
      <li class="w-12.5 h-12.5">
        <a href="{{ settings.social_facebook_link }}" class="hover:text-opacity-80" title="Facebook">
          {%- render 'icon-facebook' -%}
        </a>
      </li>
    {%- endif -%}

    {%- if settings.social_twitter_link != blank -%}
      <li class="w-12.5 h-12.5">
        <a href="{{ settings.social_twitter_link }}" class="hover:text-opacity-80" title="Twitter">
          {%- render 'icon-twitter' -%}
        </a>
      </li>
    {%- endif -%}

    {%- if settings.social_instagram_link != blank -%}
      <li class="w-12.5 h-12.5">
        <a href="{{ settings.social_instagram_link }}" class="hover:text-opacity-80" title="Instagram">
          {%- render 'icon-instagram' -%}
        </a>
      </li>
    {%- endif -%}

    {%- if settings.social_tiktok_link != blank -%}
      <li class="w-12.5 h-12.5">
        <a href="{{ settings.social_tiktok_link }}" class="hover:text-opacity-80" title="Tiktok">
          {%- render 'icon-tiktok' -%}
        </a>
      </li>
    {%- endif -%}

    {%- if settings.social_pinterest_link != blank -%}
      <li class="w-12.5 h-12.5">
        <a href="{{ settings.social_pinterest_link }}" class="hover:text-opacity-80" title="Pinterest">
          {%- render 'icon-pinterest' -%}
        </a>
      </li>
    {%- endif -%}
  </ul>
</div>
{% schema %}
  {
    "name": "Social sharing",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background",
        "default": "#EEAB47"
      },
      {
        "type": "color",
        "id": "color_heading",
        "label": "Color heading",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "Heading tag",
        "default": "h2",
        "options": [
          {
            "value": "h1",
            "label": "Heading 1"
          },
          {
            "value": "h2",
            "label": "Heading 2"
          },
          {
            "value": "h3",
            "label": "Heading 3"
          },
          {
            "value": "h4",
            "label": "Heading 4"
          },
          {
            "value": "h5",
            "label": "Heading 5"
          }
        ]
      },
      {
        "type": "color",
        "id": "color_description",
        "label": "Color description",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "header",
        "content": "Padding settings"
      }, 
      {
        "type": "range",
        "id": "padding_top_mb",
        "label": "Padding mobile top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "label": "Padding mobile bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 64
      },
       {
        "type": "range",
        "id": "padding_top",
        "label": "Padding desktop top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 92
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding desktop bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 92
      }
    ]
  }
{% endschema %}