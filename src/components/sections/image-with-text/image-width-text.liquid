{%- style -%}
  [data-section-id="{{ section.id }}"] {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
    margin-top: {{ section.settings.margin_top_mb }}px;
    margin-bottom: {{ section.settings.margin_bottom_mb }}px;
  }
  @media screen and (min-width: 768px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
{%- endstyle -%}
{% if section.blocks.size > 0 %}
  <div data-section-id="{{ section.id }}">
    <div class="page-width flex flex-wrap items-center justify-between">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          {%  liquid 
              assign position = ""
              if block.settings.position == "top"
                assign position = "md:-top-11"
              elsif block.settings.position == "bottom"
                assign position = "md:-bottom-11"
              endif
              assign position_mobile = ""
              if block.settings.position_mobile == "top"
                assign position_mobile = "-top-11"
              elsif block.settings.position_mobile == "bottom"
                assign position_mobile = "-bottom-11"
              endif
          %}
          {% if block.settings.image != blank %}
            <{% if block.settings.url != blank %}a href="{{ block.settings.url }}" target="_blank"{% else %}div{% endif %} class="relative {{ position_mobile }} {{ position }} w-full md:w-fit md:max-w-[533px] shadow-button overflow-hidden" style="border-radius: {{ block.settings.radius_image }}px;">
              <img 
                src="{{ block.settings.image | image_url: width: 533 }}" 
                srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | image_url: width: 375 }} 375w,{%- endif -%}{%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}{%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}{%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}{%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}{%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}{%- if block.settings.image.width >= 2800 -%}{{ block.settings.image | image_url: width: 2800 }} 2800w{%- endif -%}" 
                sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)" 
                class="w-full"
                width="{{ block.settings.image.width }}" 
                height="{{ block.settings.image.height }}"
              />
            </{% if block.settings.url != blank %}a{% else %}div{% endif %}>
          {% else %}
            <a class="relative {{ position_mobile }} {{ position }} w-full md:w-fit md:max-w-1/2 shadow overflow-hidden" style="border-radius: {{ block.settings.radius_image }}px;">
              {{ 'image' | placeholder_svg_tag: 'w-full' }}
            </a>
          {% endif %}
        {% else %}
          {% if block.settings.heading != blank or block.settings.description != blank %}
            <div class="text-center lg:text-left w-full md:w-fit md:max-w-1/2">
              {% if block.settings.heading != blank %}
                <{{ block.settings.heading_tag }} class="!text-2xl lg:!text-3xl !leading-none mb-3 lg:mb-4 text-black mx-auto md:mx-0" style="color: {{ section.settings.text_color }}">
                  {{ block.settings.heading }}
                </{{ block.settings.heading_tag }}>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="!text-base lg:!text-xl !leading-tight text-black max-w-[445px] mx-auto md:mx-0" style="color: {{ section.settings.text_color }}">
                  {{ block.settings.description }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endif %}

      {% endfor %}
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Image with text",
    "tag": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Padding settings"
      }, 
      {
        "type": "range",
        "id": "padding_top_mb",
        "label": "Padding mobile top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "label": "Padding mobile bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 64
      },
       {
        "type": "range",
        "id": "padding_top",
        "label": "Padding desktop top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 92
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding desktop bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 92
      },
      {
        "type": "header",
        "content": "Margin settings"
      }, 
      {
        "type": "range",
        "id": "margin_top_mb",
        "label": "Margin mobile top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom_mb",
        "label": "Margin mobile bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 0
      },
       {
        "type": "range",
        "id": "margin_top",
        "label": "Margin desktop top",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "label": "Margin desktop bottom",
        "min": 0,
        "max": 100,
        "unit": "px",
        "step": 1,
        "default": 0
      }
    ],
    "blocks": [
      {
        "name": "Image",
        "type": "image",
        "limit": 1,
        "settings": [
          {
            "type": "url",
            "id": "url",
            "label": "Link to"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "radius_image",
            "label": "Rounded image",
            "min": 0,
            "max": 100,
            "unit": "px",
            "step": 1,
            "default": 20
          },
          {
            "type": "select",
            "id": "position",
            "label": "Image position desktop",
            "default": "bottom",
            "options": [
              {
                "value": "bottom",
                "label": "Bottom"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "top",
                "label": "Top"
              }
            ]
          },
          {
            "type": "select",
            "id": "position_mobile",
            "label": "Image position mobile",
            "default": "bottom",
            "options": [
              {
                "value": "bottom",
                "label": "Bottom"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "top",
                "label": "Top"
              }
            ]
          }
        ]
      },
      {
        "name": "Text",
        "type": "Text",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "select",
            "id": "heading_tag",
            "label": "Heading tag",
            "default": "h2",
            "options": [
              {
                "value": "h1",
                "label": "Heading 1"
              },
              {
                "value": "h2",
                "label": "Heading 2"
              },
              {
                "value": "h3",
                "label": "Heading 3"
              },
              {
                "value": "h4",
                "label": "Heading 4"
              },
              {
                "value": "h5",
                "label": "Heading 5"
              }
            ]
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with text"
      }
    ]
  }
{% endschema %}