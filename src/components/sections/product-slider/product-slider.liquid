{%- if section.settings.collection != blank -%}
  {%- style -%}
    [data-section-id="{{ section.id }}"] {
      background: {{ section.settings.background_color }};
      padding-top: {{ section.settings.padding_top_mb }}px;
      padding-bottom: {{ section.settings.padding_bottom_mb }}px;
    }
    @media screen and (min-width: 1024px) {
      [data-section-id="{{ section.id }}"] {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  <div data-section-id="{{ section.id }}">
    <div class="page-width">
      <div class="flex items-center justify-between px-4 md:px-0 mb-4 md:mb-7.5">
        <{{ section.settings.heading_tag }} class="text-2xl font-bold lg:text-3xl !leading-none text-secondary capitalize">{{ section.settings.collection.title | escape }}</{{ section.settings.heading_tag }}>

        <div class="hidden lg:flex items-center gap-4 justify-end">
          <button class="prev-{{ section.id }} flex items-center justify-center rounded-full transition-all duration-200 bg-[#EEE] text-secondary hover:bg-primary-opacity-30 overflow-hidden w-10 h-10 disabled:hidden">{% render 'icon-chevron-left', class: 'w-2 h-3' %}</button>
          <button class="next-{{ section.id }} flex items-center justify-center rounded-full transition-all duration-200 bg-[#EEE] text-secondary hover:bg-primary-opacity-30 overflow-hidden w-10 h-10 disabled:hidden">{% render 'icon-chevron-right', class: 'w-2 h-3' %}</button>
        </div>
      </div>
      <swiper-component class="flex overflow-hidden" data-infor-swiper='{
                            "modules": ["Navigation"],
                            "slidesPerView": {{ section.settings.product_per_row_mobile }},
                            "slidesPerGroup": 2,
                            "spaceBetween": 10,
                            "navigation": {
                              "nextEl": ".next-{{ section.id }}",
                              "prevEl": ".prev-{{ section.id }}"
                            },
                            "scrollbar": {
                              "el": ".scrollbar-product-slider--{{ section.id }}",
                              "draggable": true
                            },
                            "breakpoints": {
                              "768": {
                                "slidesPerView": {{ section.settings.product_per_row_tablet }},
                                "spaceBetween": 12,
                                "slidesPerGroup": 1
                              },
                              "1024": {
                                "slidesPerView": {{ section.settings.product_per_row }},
                                "slidesPerGroup": 1,
                                "spaceBetween": 16
                              }
                            },
                            "speed": 400
                          }'>
        <ul class="flex swiper-wrapper">
          {%- for product in section.settings.collection.products limit: section.settings.limit -%}
            <li class="swiper-slide max-w-1/2 md:max-w-1/3 lg:max-w-1/4 mr-2.5 md:mr-3 lg:mr-4">
              {%- render 'product-card', product: product, collection: section.settings.collection, card_tag: section.settings.card_tag -%}
            </li>
          {%- endfor -%}
        </ul>
      </swiper-component>
    </div>
  </div>
{%- endif -%}
{% schema %}
  {
    "name": "Products slider",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Common settings"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background",
        "default": "#FAFAFA"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "limits",
        "label": "Products limit",
        "min": 1,
        "max": 15,
        "step": 1,
        "default": 10
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "Heading tag",
        "default": "h2",
        "options": [
          {
            "value": "h1",
            "label": "Heading 1"
          },
          {
            "value": "h2",
            "label": "Heading 2"
          },
          {
            "value": "h3",
            "label": "Heading 3"
          },
          {
            "value": "h4",
            "label": "Heading 4"
          },
          {
            "value": "h5",
            "label": "Heading 5"
          }
        ]
      },
      {
        "type": "select",
        "id": "card_tag",
        "label": "Card tag",
        "default": "h3",
        "options": [
          {
            "value": "h1",
            "label": "Heading 1"
          },
          {
            "value": "h2",
            "label": "Heading 2"
          },
          {
            "value": "h3",
            "label": "Heading 3"
          },
          {
            "value": "h4",
            "label": "Heading 4"
          },
          {
            "value": "h5",
            "label": "Heading 5"
          }
        ]
      },
      {
        "type": "range",
        "id": "product_per_row",
        "label": "Products per row",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "product_per_row_tablet",
        "label": "Products per row tablet",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 3
      },
      {
        "type": "range",
        "id": "product_per_row_mobile",
        "label": "Products per row mobile",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 2
      },
      {
        "type": "header",
        "content": "Desktop settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Top DeskTop",
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom Desktop",
        "default": 92
      },
      {
        "type": "header",
        "content": "Mobile settings"
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Top Mobile",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom Mobile",
        "default": 32
      }
    ],
    "presets": [
      {
        "name": "Products slider"
      }
    ]
  }
{% endschema %}