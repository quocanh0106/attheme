<div class="page-width">
  <div class="text-center p-4 lg:py-8 max-w-[500px] w-full rounded-[20px] mx-auto border border-solid border-primary-opacity-30 shadow-[0px_5px_8px_0px_rgba(0,_0,_0,_0.25)]">
    <h1 class="text-h3 lg:text-h1 capitalize mb-3 text-primary">Hi, {{ customer.name }}</h1>
    <span class="text-secondary text-sm lg:text-base font-normal italic">Wishing you a wonderful day!</span>
  </div>
  <div class="flex flex-wrap md:justify-between">
    {% assign full_url = request.host | append: request.path | append: request.origin %}
    {{ full_url }}
    <accordion-toggle>
      <div class="summary lg:hidden"></div>
      <div class="details lg:block lg:!max-h-full">
        <ul>
          <li class="{% if 'a' == 'a' %}{% endif %}"></li>
          
        </ul>
      </div>
    </accordion-toggle>
    
  </div>
</div>

<div class="block gap-4 md:flex">
  {%- if customer.orders.size > 0 -%}
    <div class="w-full my-6 md:my-12">
      <h2 class="text-xl font-bold text-headerColor">Order History</h2>
      {%- paginate customer.orders by 10 -%}
        <div class="grid grid-cols-1 mt-6 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-cols-8">
          {%- for order in customer.orders -%}
            <div class="relative">
              <div class="w-full bg-gray-200 rounded-medium min-80 overflo-hidden lg:h-80">
                {%- if order.line_items.first.image -%}
                  <a href="{{ order.customer_url }}">
                    <img class="object-cover object-center w-full h-full" src="{{ order.line_items.first.image | image_url: width: '240' }}" alt="{{ order.line_items.first.alt }}" width="{{ order.line_items.first.width }}" height="{{ order.line_items.first.height }}" loading="lazy">
                  </a>
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'object-cover object-center w-full h-full' }}
                {%- endif -%}
              </div>
              <div class="flex items-start justify-between mt-4">
                <div>
                  <h3 class="text-sm text-headerColor">{{ order.name | link_to: order.customer_url }}</h3>
                  <p class="mt-1 text-sm text-copyColor">{{ order.financial_status_label }}</p>
                </div>
                <div class="text-right">
                  <p class="px-3 py-1 text-sm font-medium text-white bg-gray-700 rounded-full">{{ order.fulfillment_status_label }}</p>
                  <p class="text-sm">{{ order.total_price | money }}</p>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
        <div class="max-w-6xl mx-auto">
          {% render 'pagination', pagination: paginate %}
        </div>
      {%- endpaginate -%}
    </div>
  {%- else -%}
    <div class="flex items-center justify-center w-full h-80">
      <h2 class="text-base font-medium md:text-2xl">You have no orders yet.</h2>
    </div>
  {%- endif -%}

</div>