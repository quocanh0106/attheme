<link rel="stylesheet" href="{{ 'account.css' | asset_url }}" />

<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="p-8 border border-solid border-primary rounded-3xl">
    <h1 class="text-primary text-center font-heading lg:text-h1">Log in</h1>
    <div class="flex">
      <span>Don't have an account</span>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %} +
        {% if form.errors %}
          <span class="block text-error p-1 px-2">{{ form.errors | default_errors }}</span>
        {% endif %}

        <div class="my-2">
          <label for="email_address" class="block w-full text-secondary ">Email address</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border rounded-lg"
            placeholder="Email address"
          />
        </div>

        {% if form.password_needed %}
        <div class="w-full mb-4">
          <label for="password" class="block w-full text-secondary">Password</label>
          <toggle-password class="relative field w-full block">
            
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="current-password"
              class="relative block w-full px-3 py-2 border"
              placeholder="Password"
            />
            <span class="eye absolute top-1/2 right-4 -translate-y-1/2 z-10 cursor-pointer">
              <span class="icon-eye">{% render 'icon-eye' %}</span>
              <span class="icon-eye-hidden">{% render 'icon-eye-hidden' %}</span>
            </span>
          </toggle-password>
        </div>
        {% endif %}

        <div class="my-2 text-sm">
          <a href="#" class="underline text-copyColor hover:text-headerColor">
            Forgot your password?
          </a>
        </div>

        <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Sign in</button>
      {% endform %}
    </div>

    {% if shop.checkout.guest_login %}
      <h1 class="text-primary text-center font-heading lg:text-h1">Continue as a guest</h1>
      {% form 'guest_login' %}
        <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Continue</button>
      {% endform %}
    {% endif %}
  </div>
  <div class="hidden">
    <h1 class="text-primary text-center font-heading lg:text-h1">Recover your password</h1>
    <div class="mt-8">
      {% form 'recover_customer_password' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red 700 px-4 py-3">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="email" class="sr-only">Email address</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border"
            placeholder="Email address"
          />
        </div>

        <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">Recover password</button>

        <div class="mt-8 text-sm">
          <a href="#" class="underline text-copyColor hover:text-headerColor">Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>

{% capture src_url %}{{ 'account.js' | asset_url }}{% endcapture %}
{% render 'atom_script', src: src_url, priority: 'normal', type: "defer" %}