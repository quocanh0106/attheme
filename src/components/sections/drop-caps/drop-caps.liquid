<link rel="stylesheet" href="{{ 'drop-caps.css' | asset_url }}" />

{%- style -%}
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}
    px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}
    px;
  }
  @media(min-width:1025px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if template contains 'collection' -%}
  {%- if collection.description != blank and current_page == 1 -%}
    <div data-section-id="{{ section.id }}">
      <div class="page-width">
        <drop-caps class="block px-4 py-6 lg:p-8 border border-border">
          <div class="drop-content relative">
            <div class="drop-caps max-h-35 overflow-hidden transition-all duration-500">
              {{ collection.description }}
            </div>
          </div>
          <span class="toggle-button rounded-3xl block w-fit mx-auto text-center text-overline-sm leading-none capitalize text-heading cursor-pointer tracking-normal px-4 py-2 transition-all hover:bg-text hover:text-btn-textHover" data-more="{{ 'sections.drop_caps.see_more' | t }}" data-less="{{ 'sections.drop_caps.see_less' | t }}">
            {{ 'sections.drop_caps.see_more' | t }}
          </span>
        </drop-caps>
      </div>
    </div>
  {%- endif -%}
{%- else -%}
  <div data-section-id="{{ section.id }}">
    <div class="page-width">
      <drop-caps class="block px-4 py-6 lg:p-8 border border-border">
        <div class="drop-content relative">
          <div class="drop-caps max-h-35 overflow-hidden transition-all duration-500">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'heading' -%}
                <h2
                  data-block-id="{{ block.id }}"
                  class="drop-caps__heading rte {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}>
                  {{ block.settings.heading | replace: 'p>', 'span>' }}
                </h2>
                {%- when 'caption' -%}
                <p class="drop-caps__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}" {{ block.shopify_attributes }}>
                  {{ block.settings.caption | escape }}
                </p>
                {%- when 'text' -%}
                <div class="drop-caps__text rte" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>
                {%- when 'button' -%}
                <div class="drop-caps__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} drop-caps__buttons--multiple{% endif %}" {{ block.shopify_attributes }}>
                  {%- if block.settings.button_label != blank -%}
                    <a {% if block.settings.button_link == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
                  {%- if block.settings.button_label_2 != blank -%}
                    <a {% if block.settings.button_link_2 == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.button_link_2 }}"{% endif %} class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label_2 | escape }}
                    </a>
                  {%- endif -%}
                </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
        <span class="toggle-button rounded-3xl block w-fit mx-auto text-center text-overline-sm leading-none capitalize text-heading cursor-pointer tracking-normal px-4 py-2 transition-all hover:bg-text hover:text-btn-textHover"
          data-more="{{ 'sections.drop_caps.see_more' | t }}"
          data-less="{{ 'sections.drop_caps.see_less' | t }}">
          {{ 'sections.drop_caps.see_more' | t }}
        </span>
      </drop-caps>
    </div>
  </div>
{%- endif -%}

{% capture src_url %}{{ 'drop-caps.js' | asset_url }}{% endcapture %}
{% render 'atom_script', src: src_url, priority: 'normal', type: "defer" %}

{% schema %}
  {
    "name": "t:sections.drop-caps.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "content_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Content alignment"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top section desktop",
        "default": 72
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom section desktop",
        "default": 72
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top section mobile",
        "default": 24
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom section mobile",
        "default": 32
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "t:sections.drop-caps.blocks.heading.name",
        "settings": [
          {
            "type": "richtext",
            "id": "heading",
            "default": "<p>Talk about your brand</p>",
            "label": "t:sections.drop-caps.blocks.heading.settings.heading.label"
          },
          {
            "type": "range",
            "id": "heading_size",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Heading size",
            "default": 14
          }
        ]
      },
      {
        "type": "text",
        "name": "t:sections.drop-caps.blocks.text.name",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
            "label": "t:sections.drop-caps.blocks.text.settings.text.label"
          }
        ]
      },
      {
        "type": "button",
        "name": "t:sections.drop-caps.blocks.buttons.name",
        "settings": [
          {
            "type": "text",
            "id": "button_label",
            "default": "Button label",
            "label": "t:sections.drop-caps.blocks.buttons.settings.button_label_1.label",
            "info": "t:sections.drop-caps.blocks.buttons.settings.button_label_1.info"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "t:sections.drop-caps.blocks.buttons.settings.button_link_1.label"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "t:sections.drop-caps.presets.name",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "text"
          },
          {
            "type": "button"
          }
        ]
      }
    ]
  }
{% endschema %}