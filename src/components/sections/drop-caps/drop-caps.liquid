<link rel="stylesheet" href="{{ 'drop-caps.css' | asset_url }}" />

{%- style -%}
  [data-section-id="{{ section.id }}"] {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media(min-width:1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if template contains 'collection' -%}
  {%- if collection.description != blank and current_page == 1 -%}
    <div data-section-id="{{ section.id }}">
      <div class="page-width">
        {% if section.settings.heading != blank and section.settings.heading_style == 'inner' %}
          <{{ section.settings.heading_tag }} class="text-center text-transparent bg-black bg-opacity-75 bg-clip-text [text-shadow:_0.5px_0.5px_2px_var(--color-primary)] text-xl md:text-2xl lg:text-5xl !leading-none font-bold mb-6">
            {{ section.settings.heading }}
          </{{ section.settings.heading_tag }}>
        {% endif %}
        <drop-caps class="block px-4 py-6 lg:py-10 lg:px-25 rounded-3xl bg-[#f5f5f5] relative overflow-hidden"> 
          <div class="drop-content">
            {% if section.settings.heading != blank and section.settings.heading_style == 'drop' %}
              <{{ section.settings.heading_tag }} class="text-center text-primary text-xl md:text-2xl lg:text-4xl !leading-none font-bold [text-shadow:_0_4px_4px_rgb(0,0,0,0.25)] mb-6">
                {{ section.settings.heading }}
              </{{ section.settings.heading_tag }}>
            {% endif %}
            <div class="drop-caps max-h-35 lg:max-h-76 overflow-hidden transition-all duration-500">
              {{ collection.description }}
            </div>
          </div>
          <span class="toggle-button relative rounded-[35px] block w-full mx-auto text-center shadow-button text-base lg:text-xl !leading-none bg-[#f5f5f5] font-medium hover:font-bold max-w-[160px] p-3 lg:p-4" 
                data-more="{{ 'sections.drop_caps.see_more' | t }}" 
                data-less="{{ 'sections.drop_caps.see_less' | t }}">
            {{ 'sections.drop_caps.see_more' | t }}
          </span>
        </drop-caps>
      </div>
    </div>
  {%- endif -%}
{%- else -%}
  <div data-section-id="{{ section.id }}">
    <div class="page-width">
      {% if section.settings.heading != blank and section.settings.heading_style == 'inner' %}
        <{{ section.settings.heading_tag }} class="text-center text-transparent bg-black bg-opacity-75 bg-clip-text [text-shadow:_0.5px_0.5px_2px_var(--color-primary)] text-xl md:text-2xl lg:text-5xl !leading-none font-bold mb-6">
          {{ section.settings.heading }}
        </{{ section.settings.heading_tag }}>
      {% endif %}
      <drop-caps class="block px-4 py-6 lg:py-10 lg:px-25 rounded-3xl bg-[#f5f5f5] relative overflow-hidden">
        <div class="drop-content">
          {% if section.settings.heading != blank and section.settings.heading_style == 'drop' %}
            <{{ section.settings.heading_tag }} class="text-center text-primary text-xl md:text-2xl lg:text-4xl !leading-none font-bold [text-shadow:_0_4px_4px_rgb(0,0,0,0.25)] mb-6">
              {{ section.settings.heading }}
            </{{ section.settings.heading_tag }}>
          {% endif %}
          <div class="drop-caps max-h-35 lg:max-h-76 overflow-hidden transition-all duration-500">
            {{ section.settings.text }}
          </div>
        </div>
        <span class="toggle-button relative rounded-[35px] block w-full mx-auto text-center shadow-button text-base lg:text-xl !leading-none bg-[#f5f5f5] font-medium hover:font-bold max-w-[160px] p-3 lg:p-4"
          data-more="{{ 'sections.drop_caps.see_more' | t }}"
          data-less="{{ 'sections.drop_caps.see_less' | t }}">
          {{ 'sections.drop_caps.see_more' | t }}
        </span>
      </drop-caps>
    </div>
  </div>
{%- endif -%}

{% capture src_url %}{{ 'drop-caps.js' | asset_url }}{% endcapture %}
{% render 'atom_script', src: src_url, priority: 'normal', type: "defer" %}

{% schema %}
  {
    "name": "t:sections.drop-caps.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "t:sections.drop-caps.blocks.heading.settings.heading.label"
      },
      {
        "type": "select",
        "id": "heading_tag",
        "label": "Heading tag",
        "default": "h2",
        "options": [
          {
            "value": "h1",
            "label": "Heading 1"
          },
          {
            "value": "h2",
            "label": "Heading 2"
          },
          {
            "value": "h3",
            "label": "Heading 3"
          },
          {
            "value": "h4",
            "label": "Heading 4"
          },
          {
            "value": "h5",
            "label": "Heading 5"
          }
        ]
      },
      {
        "type": "select",
        "id": "heading_style",
        "label": "Heading style",
        "default": "inner",
        "options": [
          {
            "value": "drop",
            "label": "Drop shadow"
          },
          {
            "value": "inner",
            "label": "Inner shadow"
          }
        ]
      },
      {
        "type": "richtext",
        "id": "text",
        "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
        "label": "t:sections.drop-caps.blocks.text.settings.text.label"
      },
      {
        "type": "select",
        "id": "content_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Content alignment"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top section desktop",
        "default": 72
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom section desktop",
        "default": 72
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding top section mobile",
        "default": 24
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding bottom section mobile",
        "default": 32
      }
    ]
  }
{% endschema %}