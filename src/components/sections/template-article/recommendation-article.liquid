{% for link in linklists['list-blogs'].links %}
  {% if allArticle %}
    {% assign allArticle = allArticle | concat: link.object.articles  %}
  {% else %}
    {% assign allArticle = link.object.articles  %}
  {% endif %}
{% endfor %}
{% for tag in article.metafields.custom.anchor.value %}
  {% if anchor != blank %}
    {% assign anchor = anchor | append: "," | append: tag.tag  %}
  {% else %}
    {% assign anchor = tag.tag %}
  {% endif %}
{% endfor %}
{%- style -%}
  [data-section-id="{{ section.id }}"] {
    background: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  @media screen and (min-width: 1024px) {
    [data-section-id="{{ section.id }}"] {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div data-section-id="{{ section.id }}">
  <div class="flex items-center justify-between page-width mb-8 lg:mb-12">
    <h2 class="text-h5 font-semibold lg:text-h2 text-grey-900">{{ section.settings.heading | escape }}</h2>
  </div>
  <div class="page-width-desktop px-0 md:px-3.5 lg:px-[2.125rem]">
    <swiper-component class="flex pb-4 px-4 overflow-hidden" data-infor-swiper='{
          "modules": ["Pagination"],
          "slidesPerView": 1.116,
          "spaceBetween": 16,
          "pagination": {
            "el": ".swiper-pagination-{{ section.id }}",
            "clickable": true
          },
          "breakpoints": {
            "768": {
              "slidesPerView": 2
            },
            "1024": {
              "slidesPerView": 3
            }
          }
        }'>
        <ul class="flex swiper-wrapper">
          {% if anchor != blank %}
          {% assign allArticle = allArticle | sort: 'published_at' %}
            {%- for item in allArticle -%}
              {% assign sameAnchor = false %}
              {% for tag in item.metafields.custom.anchor.value %}
                {% if anchor contains tag.tag %}
                  {% assign sameAnchor = true %}
                {% endif %}
              {% endfor %}
              {% if sameAnchor and item != article %}
              {% assign blogofitem = item.handle | split: "/" | first %}
                <li class="swiper-slide lg:max-w-1/3 mr-0.5 lg:mr-2.5 !h-auto" >
                  {% render 'article-card',blog: blogs[blogofitem],article: item, media_aspect_ratio: 1.625, show_image: true, show_blog_title:section.settings.show_blog_title ,show_date: section.settings.show_date, show_author: section.settings.show_author, show_excerpt: true %}
                </li>
              {% endif %}
            {%- endfor -%}
          {% else %}
            {% assign relatedArticles = blog.articles | sort: 'published_at' | offset: forloop.index0  %}
            {% if relatedArticles.size < 6 %}
              {% assign relatedArticles = blog.articles | sort: 'published_at' %}
            {% endif %}
            {%- for item in relatedArticles limit: section.settings.post_limit -%}
              {% if item != article %}
                <li class="swiper-slide lg:max-w-1/3 mr-0.5 lg:mr-2.5 !h-auto" >
                  {% render 'article-card', article: item, media_aspect_ratio: 1.625, show_image: true, show_blog_title:section.settings.show_blog_title ,show_date: section.settings.show_date, show_author: section.settings.show_author, show_excerpt: true %}
                </li>
              {% endif %}
            {%- endfor -%}
          {% endif %}
        </ul>
      </swiper-component>
    <div class="flex items-center justify-center gap-2 swiper-pagination-{{ section.id }} mt-4 lg:mt-6 lg:mx-auto"></div>
  </div>
</div>

{% schema %}
  {
    "name": "Recommendation Ariticle",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#FAFAFA"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Related posts",
        "label": "t:sections.featured-blog.settings.heading.label"
      },
      {
        "type": "range",
        "id": "post_limit",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3,
        "label": "t:sections.featured-blog.settings.post_limit.label"
      },
      {
        "type": "checkbox",
        "id": "show_blog_title",
        "default": true,
        "label": "Show blog title"
      },
      {
        "type": "checkbox",
        "id": "show_date",
        "default": true,
        "label": "t:sections.featured-blog.settings.show_date.label"
      },
      {
        "type": "checkbox",
        "id": "show_author",
        "default": true,
        "label": "t:sections.featured-blog.settings.show_author.label"
      },
      {
        "type": "header",
        "content": "Common settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Top DeskTop",
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 50,
        "max": 150,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom Desktop",
        "default": 92
      },
      {
        "type": "header",
        "content": "Mobile settings"
      },
      {
        "type": "range",
        "id": "padding_top_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Top Mobile",
        "default": 32
      },
      {
        "type": "range",
        "id": "padding_bottom_mb",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom Mobile",
        "default": 32
      }
    ],
    "presets": [
      {
        "name": "Recommendation Ariticle"
      }
    ]
  }
{% endschema %}