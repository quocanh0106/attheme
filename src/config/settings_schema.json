  {
    "name": "General settings",
    "settings": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo desktop"
      },
      {
        "type": "range",
        "id": "logo_width",
