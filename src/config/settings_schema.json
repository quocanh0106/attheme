  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1100,
        "max": 1300,
        "step": 4,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_primary",
        "label": "Color primary"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Color secondary"
      },
      {
        "type": "color",
